@inherits LayoutComponentBase

@layout MainLayout

<MudLayout Class="landingpage">
    <MudAppBar Class="landing-appbar" Elevation="0">
        <MainMenu DrawerToggleCallback="ToggleDrawer" />
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen" Elevation="25" Variant="@DrawerVariant.Temporary">
        <MudToolBar Dense="true" DisableGutters="true" Class="px-1 gray-bg">
            <MudIconButton Icon="@Icons.Material.Rounded.Close" Color="Color.Inherit" OnClick="@ToggleDrawer"/>
            <MudSpacer/>
        </MudToolBar>
        <MudNavMenu Color="Color.Primary" Margin="Margin.Dense" Rounded="true" Class="pa-2">
            <MudNavLink Href="dashboard">Dashboard</MudNavLink>
            <MudNavLink Href="commands">Commands</MudNavLink>
            <MudNavLink Href="faqs">FAQs</MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent Class="pa-0">
        @Body
        <LandingFooter/>
    </MudMainContent>
</MudLayout>

@code {
    private bool _drawerOpen = false;

    private void ToggleDrawer()
    {
        _drawerOpen = !_drawerOpen;
    }
}